@model PricingModels

@{
    ViewData["Title"] = "Pricing";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <br />
    <p>
        We offer 3 account plans for our services
    </p>
    <div class="card-deck mb-3 text-center">
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">@Model.FreeTier.Name</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$@Model.FreeTier.PricePerMonth <small class="text-muted">/ mo</small></h1>
                <i>or</i>
                <h4 class="card-subtitle pricing-card-title">$@Model.FreeTier.PricePerYear <small class="text-muted"> / yr</small></h4>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>File hosting (public &amp; private)</li>
                    <li>File sharing with other users</li>
                    <li>5 GB of total storage</li>
                    <li>500 MB per file</li>
                    <li>Email &amp; Ticket support (Low priority)</li>
                </ul>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-lg btn-block btn-outline-primary">Sign up</a>
            </div>
        </div>
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">@Model.PlusTier.Name</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$@Model.PlusTier.PricePerMonth <small class="text-muted">/ mo</small></h1>
                <i>or</i>
                <h4 class="card-subtitle pricing-card-title">$@Model.PlusTier.PricePerYear <small class="text-muted"> / yr</small></h4>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>File hosting (public &amp; private)</li>
                    <li>File sharing with other users</li>
                    <li>250 GB of total storage</li>
                    <li>5 GB per file</li>
                    <li>Email &amp; Ticket support (Medium priority)</li>
                </ul>
                <a href="#" class="btn btn-lg btn-block btn-primary">Purchase</a>
            </div>
        </div>
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">@Model.ProTier.Name</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title">$@Model.ProTier.PricePerMonth <small class="text-muted">/ mo</small></h1>
                <i>or</i>
                <h4 class="card-subtitle pricing-card-title">$@Model.ProTier.PricePerYear <small class="text-muted"> / yr</small></h4>
                <ul class="list-unstyled mt-3 mb-4">
                    <li>File hosting (public &amp; private)</li>
                    <li>File sharing with other users</li>
                    <li>1000 GB of total storage</li>
                    <li>20 GB per file</li>
                    <li>Email &amp; Ticket support (High priority)</li>
                </ul>
                <a href="#" class="btn btn-lg btn-block btn-primary">Purchase</a>
            </div>
        </div>
    </div>
</div>
